{
	"name": "postcss-tailwind-variants",
	"version": "0.0.0-development",
	"description": "PostCSS plugin to use your Tailwind CSS custom variants in CSS.",
	"keywords": [
		"postcss",
		"css",
		"postcss-plugin",
		"tailwind",
		"tailwindcss",
		"variant",
		"tailwind-variants",
		"custom-selectors"
	],
	"scripts": {
		"test": "node --test",
		"test:rewrite": "REWRITE_EXPECTS=true node --test",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"emit-types": "tsc index.js --declaration --allowJs --emitDeclarationOnly --lib esnext --outDir ."
	},
	"author": "Emmanuel Beaudry Marchand <emmbema@gmail.com>",
	"license": "MIT",
	"repository": "emmbm/postcss-tailwind-variants",
	"engines": {
		"node": ">=18.0.0"
	},
	"peerDependencies": {
		"postcss": "^8.4.27",
		"tailwindcss": "^4.0.0"
	},
	"devDependencies": {
		"@csstools/postcss-tape": "^5.0.0",
		"@tailwindcss/postcss": "4.0.0-beta.2",
		"eslint": "^9.15.0",
		"eslint-config-prettier": "^9.1.0",
		"postcss": "^8.4.49",
		"prettier": "^3.3.3",
		"prettier-plugin-jsdoc": "^1.3.0",
		"prettier-plugin-tailwindcss": "^0.6.9",
		"semantic-release": "^24.2.0",
		"tailwindcss": "4.0.0-beta.2",
		"typescript": "^5.7.2"
	},
	"files": [
		"index.js",
		"index.d.ts",
		"README.md"
	],
	"types": "index.d.ts"
}